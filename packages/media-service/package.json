{
  "name": "media-service",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "yarn start:all",
    "start:backend": "cd backend && yarn start",
    "start:frontend": "cd frontend && yarn dev",
    "start:all": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "build": "yarn workspaces run build",
    "lint": "eslint ."
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "webtorrent": "^2.5.5",
    "webtorrent-hybrid": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "ts-jest": "^29.2.5",
    "typescript": "~5.6.2"
  }
}
