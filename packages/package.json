{
  "name": "andor-packages",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "channel-service",
    "media-service",
    "auth-service",
    "api-gateway"
  ],
  "scripts": {
    "dev": "yarn build:all && concurrently \"yarn start:api-gateway\" \"yarn start:media-service\" \"yarn start:frontend\" \"yarn start:auth-service\"",
    "start:channel-service": "cd channel-service && yarn start ",
    "start:frontend": "cd frontend && yarn dev",
    "start:media-service": "cd media-service && yarn start",
    "start:auth-service": "cd auth-service && yarn start",
    "start:api-gateway": "cd api-gateway && yarn start",
    "build": "yarn workspaces run build",
    "build:all": "yarn build",
    "lint:backend": "eslint backend/src/**/*.ts --fix"
  },

  "dependencies": {
    "buffer": "^6.0.3",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "webtorrent": "^2.5.5",
    "webtorrent-hybrid": "^6.0.0",
    "sucrase": "^3.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "ts-jest": "^29.2.5",
    "typescript": "~5.6.2"
  }
}
