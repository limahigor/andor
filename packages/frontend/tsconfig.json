{
  "compilerOptions": {
    "jsx": "react-jsx", // Permite JSX com React 17+
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "vite.config.ts"],
}
