{
  "name": "api-gateway",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "sucrase-node src/main/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn workspace api-gateway test --watch -c jest-unit-config.js",
    "test:integration": "yarn workspace api-gateway test --watch -c jest-integration-config.js",
    "test:staged": "yarn workspace api-gateway test --findRelatedTests",
    "test:ci": "yarn workspace api-gateway test --coverage",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "express": "^4.21.1",
    "webtorrent": "^2.5.5"
  },
  "devDependencies": {
    "sucrase": "^3.35.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.7",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "@types/webtorrent": "^0.110.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.10",
    "merge": "^2.1.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
